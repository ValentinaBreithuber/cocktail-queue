<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="Cocktail">
    <Appenders>
        <File name="Cocktail" fileName="logs/myapp.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Cocktail"/>
        </Root>
    </Loggers>
</Configuration>