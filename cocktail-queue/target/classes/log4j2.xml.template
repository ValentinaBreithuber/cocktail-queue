<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO"  name="Calculator" packages="">
    <Appenders>
        <Console name="Calculator" target="logs/myapp.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Calculator"/>
        </Root>
    </Loggers>
</Configuration>